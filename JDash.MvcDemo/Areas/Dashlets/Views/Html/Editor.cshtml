@model JDash.MvcDemo.Areas.Dashlets.Models.HtmlModel
@using JDash.Mvc

<div>
    @using (Ajax.BeginForm(new AjaxOptions() { }))
    {

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Set HTML Options</legend>
            <div class="form-group">
                <div class="col-md-6">
                    @Html.Label("Title")
                    @Html.JDash().DashletTitleEditor().Css("form-control").Render()
                </div>

                <div class="col-md-6">
                    @Html.Label("Style")
                    @Html.JDash().DashletStylesList().Render()
                </div>

            </div>
            @Html.TextAreaFor(m => m.Html, new { @class = "form-control", rows = "10" })
            @Html.ValidationMessageFor(m => m.Html)

        </fieldset>
    }
</div>
