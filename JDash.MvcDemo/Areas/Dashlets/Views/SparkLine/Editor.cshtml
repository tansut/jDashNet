@model JDash.MvcDemo.Areas.Dashlets.Models.SparkLineModel

@using JDash.Mvc

<div>
    @using (Ajax.BeginForm(new AjaxOptions() { }))
    {

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Set HTML Options</legend>
            <div class="form-group">
                <div class="col-md-6">
                    @Html.Label("Title")
                    @Html.JDash().DashletTitleEditor().Css("form-control").Render()
                </div>

                <div class="col-md-6">
                    @Html.Label("Style")
                    @Html.JDash().DashletStylesList().Render()
                </div>

            </div>
            <div class="form-group">
                @Html.LabelFor(m=>m.Type)
                @Html.TextBoxFor(m => m.Type, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m=>m.Value)
                @Html.TextBoxFor(m => m.Value, new { @class = "form-control" })
            </div>
        </fieldset>
    }
</div>
